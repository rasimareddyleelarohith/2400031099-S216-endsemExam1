<body>

<h2>ðŸŽ‚ Student Birthday Reminder</h2>

<div id="cards"></div>

<!-- Toast -->
<div id="toast"></div>

<script>
// Student List
const students = [
    { name: "Rohith", dob: "2005-01-12" },
    { name: "Leela", dob: "2004-11-28" },
    { name: "Kiran", dob: "2003-11-28" },
    { name: "Asha", dob: "2005-05-13" }
];

// Create Cards
const container = document.getElementById("cards");

students.forEach(s => {
    const div = document.createElement("div");
    div.className = "card";

    // First letter avatar
    const avatar = s.name.charAt(0).toUpperCase();

    div.innerHTML = `
        <div class="circle">${avatar}</div>
        <h3>${s.name}</h3>
        <p class="dob">DOB: ${s.dob}</p>
    `;

    container.appendChild(div);
});

// Toast Function
function showToast(message) {
    const toast = document.getElementById("toast");
    toast.innerHTML = message;
    toast.classList.add("show");
    setTimeout(() => toast.classList.remove("show"), 3500);
}

// Check Today's Birthday
const today = new Date();
const tDay = today.getDate();
const tMonth = today.getMonth() + 1;

students.forEach(student => {
    const dob = new Date(student.dob);
    if (dob.getDate() === tDay && (dob.getMonth() + 1) === tMonth) {
        showToast(`ðŸŽ‰ Today is ${student.name}'s Birthday!`);
    }
});
</script>

